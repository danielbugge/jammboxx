
<div class="banner-index" style="background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.5) 0, #090216 100%),  url('<%= image_url("banner2.jpg") %>');">
  <div class="banner-index_content">
    <h1>Filters</h1>
    <p>Your search result for :</p>
    <div id="search-results">
      <% if !(@location.nil? || @genre.nil?) %>
        <h2> <%= @location %>, <%= @genre %> </h2>
      <% elsif !@location.nil? %>
        <h2> <%= @location %> </h2>
      <% elsif !@genre.nil?  %>
        <h2> <%= @genre %> </h2>
      <% else %>
        <h2> See all </h2>
      <% end %>
    </div>
  </div>
</div>
<div class="index-container">
  <div class="filters text-center">
    <%= form_tag jamms_path, method: "get" do %>
      <div class="filter">
        <%= text_field_tag :city,
            params[:city],
            id: "city-filter",
            class: "btn form-control",
            placeholder: "Choose a city" %>
      </div>
      <div id="genre-filter" class="filter">
        <%= select_tag "genre",
            options_from_collection_for_select(@genres, "id", "name"),
            class: "btn form-control",
            placeholder: "Choose a genre" %>
      </div>
      <div id="instrument-type-filter" class="filter">
        <%= select_tag "instrument_t",
            options_from_collection_for_select(@instrument_types, "id", "name"),
            class: "btn form-control",
            placeholder: "Choose a genre" %>
      </div>
      <%= submit_tag 'Filter',
      class: "btn btn-success" %>
    <% end %>
  </div>
  <div class="sharedcards">
    <%= render 'shared/cards' %>
  </div>
</div>

