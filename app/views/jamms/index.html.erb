<div class="banner-index" style="background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.5) 0, #090216 100%),  url('<%= image_url("banner2.jpg") %>');">
  <div class="banner-index_content">
    <h1>Filters</h1>
    <p>Your search result for :</p>
    <h2>LONDON, ROCK 'N' ROLL, DRUM SET</h2>
  </div>
</div>
<div class="index-container">
  <div class="filters text-center">
    <%= form_tag jamms_path, method: "get" do %>
      <div class="filter">
        <%= text_field_tag :city,
            params[:city],
            class: "btn form-control",
            placeholder: "Select a city" %>
      </div>
      <div class="filter">
        <%= text_field_tag :genre,
            params[:genre],
            class: "btn form-control",
            placeholder: "Select a genre" %>
      </div>
      <%= submit_tag 'Filter',
      class: "btn btn-success" %>
    <% end %>
  </div>

  <div class="sharedcards">
    <%= render 'shared/cards' %>
  </div>
</div>
